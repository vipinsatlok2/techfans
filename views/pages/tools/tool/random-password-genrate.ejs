<%- include("../../../partials/head.ejs") %>
<%- include("../../../partials/header.ejs") %>

    <div class="container">
    <div class="row">
        <div class="col-xxl-8 col d-flex flex-column">
            <form class="col-md-6 col d-xs-flex flex-column mt-4 p-2">
               <h1 class="fs-2 mb-4">Random Password Genrator</h1>
                <div class="mb-3">
                    <select id="length" class="form-select" aria-label="Disabled select example">
                        <option value="10" selected>Select length</option>
                        <% for(var i = 0; i < 15; i++ ) { %>
                         <option value="<%= i+1 %>"><%= i+1 %></option>
                        <% } %>
                    </select>
                </div>
                <div class="col input-group mb-3">
                    <input id="password" type="text" class="form-control" value="" placeholder="Your password here"  aria-describedby="button-addon2">
                    <button id="copyButton" class="btn btn-secondary" type="button" id="button-addon2">Copy</button>
                </div>
                <div class="col input-group">
                   <button id="genrateButton" type="submit" class="btn btn-primary">Genrate password</button>
                </div>
            </form>
        </div>
    </div>
</div>
    
